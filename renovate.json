{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "autoApprove": true,
  "automerge": true,
  "branchConcurrentLimit": 10,
  "prConcurrentLimit": 2,
  "ignoreDeps": ["com.android.tools.build:gradle"],
  "packageRules": [
    {
      "groupName": "kotlin and ksp",
      "matchSourceUrls": [
        "https://github.com/JetBrains/kotlin",
        "https://github.com/google/ksp"
      ]
    },
    {
      "groupName": "firebase",
      "matchPackageNames": ["/^com\\.google\\.firebase/"],
      "changelogUrl": "https://firebase.google.com/support/release-notes/android"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update Pitest version in build-logic",
      "managerFilePatterns": [
        "build-logic/src/main/kotlin/artemis/agent/gradle/Helpers.kt"
      ],
      "matchStrings": [
        "private const val PITEST_VERSION = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "maven",
      "depNameTemplate": "org.pitest:pitest"
    },
    {
      "customType": "regex",
      "description": "Update Pitest JUnit5 plugin version in build-logic",
      "managerFilePatterns": [
        "build-logic/src/main/kotlin/artemis/agent/gradle/Helpers.kt"
      ],
      "matchStrings": [
        "private const val JUNIT5_VERSION = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
      ],
      "datasourceTemplate": "maven",
      "depNameTemplate": "org.pitest:pitest-junit5-plugin"
    }
  ]
}
