{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "autoApprove": true,
  "automerge": true,
  "ignoreDeps": ["com.android.tools.build:gradle"],
  "packageRules": [
    {
      "groupName": "kotlin and ksp",
      "extends": [
        "group:kotlinMonorepo",
        "group:kspMonorepo"
      ]
    },
    {
      "groupName": "firebase",
      "matchPackageNames": ["/^com\\.google\\.firebase/"]
    }
  ]
}
