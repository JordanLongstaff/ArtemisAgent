<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/completedMissionGreen">
    <View
        android:id="@+id/payoutLeftDivider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="?android:attr/listDivider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/rewardTypeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/paddingSmall"
        android:gravity="center_horizontal|top"
        android:minLines="2"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/rewardQuantityLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/paddingSmall"
        android:gravity="center"
        android:textSize="96sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rewardTypeLabel"/>
    <View
        android:id="@+id/payoutRightDivider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/paddingSmall"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toEndOf="@id/rewardTypeLabel"
        app:layout_constraintLeft_toRightOf="@id/rewardTypeLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>
