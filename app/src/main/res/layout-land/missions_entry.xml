<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <View
        android:id="@+id/missionLeftDivider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="?android:attr/listDivider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/nextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/paddingSmall"
        android:text="@string/next_to"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/missionDirectionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/paddingSmall"
        android:text="@string/direction"
        android:textSize="@dimen/baseTextSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextLabel" />
    <TextView
        android:id="@+id/missionRangeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/paddingSmall"
        android:text="@string/range"
        android:textSize="@dimen/baseTextSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nextLabel" />
    <TextView
        android:id="@+id/missionTimeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/baseTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/thenLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.375"
        android:text="@string/then_to"
        android:textSize="@dimen/baseTextSize"
        app:layout_constraintEnd_toEndOf="@id/nextLabel"
        app:layout_constraintLeft_toLeftOf="@id/nextLabel"
        app:layout_constraintRight_toRightOf="@id/nextLabel"
        app:layout_constraintStart_toStartOf="@id/nextLabel"
        app:layout_constraintTop_toBottomOf="@id/missionDirectionLabel" />
    <TextView
        android:id="@+id/rewardsLabel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/rewards"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/missionTimeLabel"
        app:layout_constraintEnd_toEndOf="@id/nextLabel"
        app:layout_constraintLeft_toLeftOf="@id/nextLabel"
        app:layout_constraintRight_toRightOf="@id/nextLabel"
        app:layout_constraintStart_toStartOf="@id/nextLabel"
        app:layout_constraintTop_toBottomOf="@id/thenLabel" />
    <View
        android:id="@+id/missionRightDivider"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/paddingSmall"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toEndOf="@id/nextLabel"
        app:layout_constraintLeft_toRightOf="@id/nextLabel" />
</androidx.constraintlayout.widget.ConstraintLayout>
